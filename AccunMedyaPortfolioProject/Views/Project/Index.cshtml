@model List<AccunMedyaPortfolioProject.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Project List</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Proje İsmi</th>
                <th>Kategori İsmi</th>
                <th>Kapak Resmi</th>
                <th>Açıklama</th>
                <th>Proje Linki</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.ProjectName</td>
                    <td>@project.Category.Name</td>
                    <td><img src="@project.CoverImageUrl" /> </td>
                    <td>@project.Description</td>
                    <td>@project.ProjectLink</td>
                    <td><a href="/Project/UpdateProject/@project.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Project/DeleteProject/@project.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Project/CreateProject" class="btn btn-primary">Yeni Proje ekle</a>
</div>

