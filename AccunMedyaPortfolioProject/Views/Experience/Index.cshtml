@model List<AccunMedyaPortfolioProject.Models.Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<h2 class="text-center mt-4">Deneyim Kontrol Paneli</h2>
<br />

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>Id</th>
                <th>Başlık</th>
                <th>Şirket İsmi</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.CompanyName</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Description</td>
                    <td><a href="/Experience/UpdateExperience/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Experience/DeleteExperience/@item.Id" class="btn btn-danger">Kaldır</a></td>


                </tr>
            }
        </tbody>
    </table>
    <a href="/Experience/CreateExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>


</div>

