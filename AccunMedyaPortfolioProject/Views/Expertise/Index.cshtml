@model List<AccunMedyaPortfolioProject.Models.Expertise>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<h2 class="text-center mt-4">Yetenek Kontrol Paneli</h2>
<br />

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expertise in Model)
            {
                <tr>
                    <td>@expertise.Id</td>
                    <td>@expertise.Title</td>
                    <td> <a href="/Expertise/UpdateExpertise/@expertise.Id" class="btn btn-success">Güncelle</a></td>
                    <td> <a href="/Expertise/DeleteExpertise/@expertise.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Expertise/CreateExpertise" class="btn btn-dark">Yeni Uzmanlık Alanı Ekle</a>

</div>

