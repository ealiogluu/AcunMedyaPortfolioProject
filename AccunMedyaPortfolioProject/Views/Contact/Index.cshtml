@model List<AccunMedyaPortfolioProject.Models.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="text-center mt-4">İletişim Kontrol Paneli</h2>
<br />

<div class="container">
    <form method="post">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Phone</th>
                    <th>Mail</th>
                    <th>Adress</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.Id</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Mail</td>
                        <td>@contact.Adress</td>
                        <td> <a href="/Contact/UpdateContact/@contact.Id" class="btn btn-success">Güncelle</a></td>
                        <td> <a href="/Contact/DeleteContact/@contact.Id" class="btn btn-danger">Kaldır</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    <a href="/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Ekle</a>
</div>
