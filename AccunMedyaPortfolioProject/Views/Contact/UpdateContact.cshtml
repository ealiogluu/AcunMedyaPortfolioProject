@model AccunMedyaPortfolioProject.Models.Contact
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateContact</h2>

<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)

        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        <br />
        <label>Adres</label>
        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>

    </form>
</div>