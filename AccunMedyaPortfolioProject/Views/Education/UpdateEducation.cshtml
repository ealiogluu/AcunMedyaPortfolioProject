@model AccunMedyaPortfolioProject.Models.Education
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<h2>Eğitimi Güncelle</h2>
<br />

<div class="container">
    <form method="post">
        @Html.HiddenFor(x=>x.Id)

        <label style="color:black">Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label style="color:black">Kurum İsmi</label>
        @Html.TextBoxFor(x => x.InstutionName, new { @class = "form-control" })
        <br />

        <label style="color:black">Başlangıç Tarihi</label>
        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
        <br />

        <label style="color:black">Bitiş Tarihi</label>
        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control" })
        <br />

        <label style="color:black">Açıklama</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />

        <button class="btn btn-info">Güncelle</button>

    </form>
</div>

