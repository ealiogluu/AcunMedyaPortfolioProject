 @model List<AccunMedyaPortfolioProject.Models.Contact>

<section id="contact" class="s-contact target-section">

    <div class="row contact-top">
        <div class="column lg-12">
            <h2 class="text-pretitle">
                soru veya öneriler için
            </h2>

            <p class="h1">
                İletişime geç
            </p>
        </div>
    </div> <!-- end contact-top -->

    <div class="row contact-bottom">
        <div class="column lg-3 md-5 tab-6 stack-on-550 contact-block">
            <h3 class="text-pretitle">Bana ulaş</h3>
            @foreach (var item in Model)
            {
                <p class="contact-links">
                    <a href="@item.Mail" class="mailtoui">@item.Mail</a> <br>
                    <a href="tel:+1975432345">+197 543 2345</a>
                </p>

            }
        </div>

        @Html.Action("PartialSocialMedia")

        <div class="column lg-4 md-12 contact-block">
            <a href="mailto:eeminennura@gmail.com" class="mailtoui btn btn--medium u-fullwidth contact-btn">Mail</a>
        </div>
    </div> <!-- end contact-bottom -->

</section>
