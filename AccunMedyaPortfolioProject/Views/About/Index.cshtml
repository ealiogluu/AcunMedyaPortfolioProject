@model List<AccunMedyaPortfolioProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="text-center mt-4">Hakkımda Kontrol Paneli</h2>

<br />
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>CV Linki</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var about in Model)
            {
                <tr>
                    <td>@about.Id</td>
                    <td>@about.Title</td>
                    <td>@about.Description</td>
                    <td><img src="@about.ImageUrl" style="width:75px;height:75px" /></td>
                    <td><a href="@about.CVLink" /></td>
                    <td><a href="/About/UpdateAbout/@about.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/About/DeleteAbout/@about.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/About/CreateAbout" class="btn btn-dark">Yeni Hakkında Ekle</a>

</div>

