@model List<AccunMedyaPortfolioProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="text-center mt-4">Referans Kontrol Paneli</h2>
<br />

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad Soyad</th>
                <th>Başlık</th>
                <th>Resim Urlsi</th>
                <th>Yorum</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var testimonial in Model)
            {
                <tr>
                    <td>@testimonial.Id</td>
                    <td>@testimonial.NameSurname</td>
                    <td>@testimonial.Title</td>
                    <td> <img src="@testimonial.ImageUrl" style="height:75px;width:75px" /></td>
                    <td>@testimonial.Comment</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@testimonial.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonial/DeleteTestimonial/@testimonial.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>

    </table>
    <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni yorum Ekle</a>
</div>